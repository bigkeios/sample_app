<li id="micropost-<%= micropost.id%>">
    <% user = micropost.user%>
    <%= link_to gravatar_for(user, size: 50), user_url(user) %>
    <br>
    <span class="user"><%= link_to user.name, user_url(user) %></span>
    <br>
    <span class="content"><%= micropost.content %></span>
    <br>
    <span class="time"> Posted <%= time_ago_in_words(micropost.created_at)%> ago </span>
    <% if current_user == micropost.user %>
        <%= link_to "Delete", micropost_path(micropost),  method: :delete, data: {confirm: "Are you sure you want to delete that post"}, class: 'delete-link'%>
    <% end %>
</li>